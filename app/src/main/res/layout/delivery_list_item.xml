<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="delivery"
            type="com.example.deliveryledger.repository.model.Delivery" />

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="glideInstance"
            type="com.bumptech.glide.RequestManager" />

        <variable
            name="deliverySelectionListener"
            type="com.example.deliveryledger.view.adapter.DeliveryListAdapter.DeliverySelectionListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        android:padding="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_5">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:onClick="@{()-> deliverySelectionListener.onDeliverySelected(delivery)}"
            android:padding="@dimen/dp_10">
            
            <ImageView
                android:id="@+id/goods_iv"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/goods_image"
                app:imageUrl="@{delivery.goodsPicture}"
                app:glideInstance="@{glideInstance}"/>

            <LinearLayout
                android:id="@+id/text_container_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/goods_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/from_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="@{String.format(@string/from_delivery, delivery.route.start)}"/>

                <TextView
                    android:id="@+id/to_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:text="@{String.format(@string/to_delivery, delivery.route.end)}"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/text_container_ll"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/dp_10"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/favorite_iv"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="end"
                    android:contentDescription="@string/favorite_icon"
                    android:src="@drawable/favorite"
                    android:scaleType="centerInside"
                    android:visibility="@{delivery.favorite ? view.VISIBLE : view.GONE}"/>

                <TextView
                    android:id="@+id/price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_10"
                    app:deliveryFee="@{delivery.deliveryFee}"
                    app:surcharge="@{delivery.surcharge}"/>

            </LinearLayout>

            
        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.cardview.widget.CardView>

</layout>